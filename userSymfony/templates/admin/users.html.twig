{% extends 'admin/baseback.html.twig' %}
{% block title  %}Utilisateur{% endblock %}
{% block data %}


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Login</th>
                    <th scope="col">Email</th>
                    <th scope="col">Numero</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Type</th>
                    <th scope="col">Domaine</th>
                    <th scope="col">Blocked</th>
                  </tr>
                </thead>
                <tbody>
                  
                  {% for user in users %}
                <tr >
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.numtel }}</td>
                    <td>{{ user.adresse }}</td>
                    {% if user.role == 2 %}
                    <td>business owner</td>
                    {% elseif user.role == 3 %}
                    <td>freelancer</td>
                    {% else %}
                    <td>null</td>
                    {% endif %}

                    <td>{{ user.domaine }}</td>
                    {% if user.isblocked == 1 %}
                    <td><a href="{{ path('app_utilisateur_back_unblock', {'id': user.id}) }}"><button type="button" class="btn btn-danger" ><i class="bi bi-exclamation-octagon"></i></button></a></td>
                    {% else %}
                    <td><a href="{{ path('app_utilisateur_back_block', {'id': user.id}) }}"><button type="button" class="btn btn-success"><i class="bi bi-check-circle"></i></button></a></td>
                     {% endif %}
                </tr>
                {% endfor %}
                    
              
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  

{% endblock %}